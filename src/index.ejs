<%
  const metaSetting = {
    title:'タイトルが入ります',
    description:'ディスクリプションが入ります',
    tw_card:'summary_large_image',
    // tw_site:'@hoge',
    og_url:`${domainUrl}`,
    og_type:'website',
    og_title:'OGが入ります',
    og_description:'OGディスクリプションが入ります',
    og_site_name:'サイト名が入ります。',
    og_image:`${domainUrl}assets/images/top/ogp1.jpg`
  }

  const pickup = pickupData;
%>
<!DOCTYPE html>
<html lang="jp">

<head>
<%- include('./include/_meta',{config:metaSetting}) %>
<%- include('./include/_og',{config:metaSetting}) %>
<%- include('./include/_tw_card',{config:metaSetting}) %>
<%- include('./include/_analytics',{gaAccount:gaAccount}) %>
<link rel="stylesheet" href="/assets/css/top.css?<%=date%>">
</head>

<body>
<div class="wrapper">
  <ul class="tabList">
    <li class="tab selected"><a href="#">タブ1</a></li>
    <li class="tab"><a href="#">タブ2</a></li>
    <li class="tab"><a href="#">タブ3</a></li>
  </ul>
  <div class="tabContent-wrap">
    <section id="tabContent1" class="tabContent">
      <p>タブ1のコンテンツ</p>
      <ul class="shareLink">
        <li><a href="share1.html" class="twButton js-snsLink-tw">Twitterでつぶやく</a></li>
        <li><a href="share1.html" class="fbButton js-snsLink-fb">Facebookでシェアする</a></li>
        <li><a href="share1.html" class="lineButton js-snsLink-line">LINEで送る</a></li>
      </ul>
    </section>
    <section id="tabContent2" class="tabContent">
      <p>タブ2のコンテンツ</p>
      <ul class="shareLink">
        <li><a href="share2.html" class="twButton js-snsLink-tw">Twitterでつぶやく</a></li>
        <li><a href="share2.html" class="fbButton js-snsLink-fb">Facebookでシェアする</a></li>
        <li><a href="share2.html" class="lineButton js-snsLink-line">LINEで送る</a></li>
      </ul>
    </section>
    <section id="tabContent3" class="tabContent">
      <p>タブ3のコンテンツ</p>
      <ul class="shareLink">
        <li><a href="share3.html" class="twButton js-snsLink-tw">Twitterでつぶやく</a></li>
        <li><a href="share3.html" class="fbButton js-snsLink-fb">Facebookでシェアする</a></li>
        <li><a href="share3.html" class="lineButton js-snsLink-line">LINEで送る</a></li>
      </ul>
    </section>

    <section id="pickup">
      <ul class="thumbnailList">
        <% pickup.forEach((item, index)=>{ %>
          <li class="thumbnail"><a href="#" class="js-pickupModal" data-modal-index="<%= index+1 %>"><img src="<%= item.thum_image %>" alt=""></a></li>
        <% }) %>
      </ul>

      <div id="pickupModal" class="c-modal">
        <div class="c-modal__bg js-pickupModalClose"></div>
        <div class="c-modal__inner">
          <div class="swiper-container">
            <div class="swiper-wrapper">
              <% pickup.forEach((item)=>{ %>
              <div class="swiper-slide">
                <p><%=item.text%></p>
                <figure><img src="<%= item.image %>" alt=""></figure>
              </div>
              <% }) %>
            </div>
            <div class="swiper-pagination"></div>
          </div>
        </div>
      </div>

    </section>
  </div>
</div>

  <script src="/assets/js/top.js?<%=date%>"></script>
  <script src="/assets/js/modal.js?<%=date%>"></script>
</body>

</html>